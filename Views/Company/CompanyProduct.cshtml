@model IEnumerable<CompanyManagement.ViewModel.CompanyProductSummaryViewModel>

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Company Product";
}

<div class="wrapper">
    <div class="container-fluid">
        <section class="content">
            <div class="row mt-2">
                <div class="col-md-12">
                    <div class="card card-info">
                        <div class="card-header">
                            <div class="card-title">Company Product List</div>
                            <div class="felx">
                                <a style="margin-right:16px" class="btn btn-sm btn-dark float-right" href="/Company/CompanyList">Back To Company List</a>
                            </div>
                        </div>
                        <div class="card-body">
                            <section class="content">
                                <div class="container-fluid">
                                    <div class="row">
                                        <div class="col-md-3">

                                            <div class="card card-primary card-outline">
                                                <div class="card-body box-profile">
                                                    <div class="text-center">
                                                        <img class="profile-user-img img-fluid img-circle"
                                                             src="../../dist/img/user4-128x128.jpg"
                                                             alt="User profile picture">
                                                    </div>

                                                    <h3 class="profile-username text-center">Name</h3>

                                                    <p class="text-muted text-center">Software Engineer</p>

                                                    <ul class="list-group list-group-unbordered mb-3">
                                                        <li class="list-group-item">
                                                            <b>Followers</b> <a class="float-right">1,322</a>
                                                        </li>
                                                        <li class="list-group-item">
                                                            <b>Following</b> <a class="float-right">543</a>
                                                        </li>
                                                        <li class="list-group-item">
                                                            <b>Friends</b> <a class="float-right">13,287</a>
                                                        </li>
                                                    </ul>

                                                    <a href="#" class="btn btn-primary btn-block"><b>Follow</b></a>
                                                </div>

                                            </div>

                                        </div>

                                    </div>

                                </div>
                            </section>
                            <div class="row">
                                <div class="col-sm-12">
                                    <table class="table table-bordered table-striped dataTable dtr-inline">
                                        <thead>
                                            <tr>
                                                <th>Company Name</th>
                                                <th>Total Product Count</th>
                                                <th>Products</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>@item.CompanyName</td>
                                                    <td>@item.TotalProductCount</td>
                                                    <td>@item.Products</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <div class="modal fade" id="MainModal" role="dialog" aria-labelledby="MainModal" aria-hidden="true">
            <div id="MainModalBody"></div>
        </div>
    </div>
</div>



<script>
    $(function () {
        $(".dataTable").DataTable({
            "responsive": true,
            "lengthChange": false,
            "autoWidth": false,
            "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
        }).buttons().container().appendTo('#dataTable_wrapper .col-md-6:eq(0)');
    });
</script>
