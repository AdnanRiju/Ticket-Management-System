@model CompanyManagement.Models.Product
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
        <div class="modal-header bg-info text-white">
            <span><b>@ViewBag.TitleName</b></span>
            <span><b>Update Product</b></span>
            <button type="button" class="close trigger-reload text-white" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div>
        <div class="modal-body">
            <form asp-controller="Product" asp-action="EditProduct"
                  data-ajax-begin="onBegin" data-ajax-complete="onComplete"
                  data-ajax-failure="onFailed" data-ajax-success="onSuccess"
                  data-ajax="true" data-ajax-method="POST" autocomplete="off">
                @Html.AntiForgeryToken()
                <div class="card-body">
                    <div class="form-group row">
                        <label for="ProductName" class="col-md-4 col-form-label">ProductName</label>
                        <div class="col-md-8">
                            <input class="form-control" asp-for="ProductName" placeholder="ProductName" />
                            <span class="text-danger field-validation-valid" asp-validation-for="ProductName" data-valmsg-replace="true"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-4">
                            <label class="control-label">Product Type</label>
                        </div>
                        <div class="col-md-8">

                            <select asp-for="ProductTypeId" asp-items="(SelectList)ViewBag.ProductType" class="form-control">
                                <option value="0">Select One</option>
                            </select>

                        </div>
                    </div>
                    <div class="form-group row" hidden >
                        <label for="Created Date" class="col-md-4 col-form-label">CreateDate</label >
                        <div class="col-md-8">

                            <input hidden class="form-control" asp-for="CreateDate" placeholder="CreateDate">
                            <span class="text-danger field-validation-valid" asp-validation-for="CreateDate" data-valmsg-replace="true"></span>
                        </div>
                    </div>
                    
                   
                </div>
                <div class="madal-footer float-right">
                    <input type="submit" class="btn btn-sm btn-success" value="Save" />
                </div>
            </form>
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        $('.trigger-reload').on('click', () => {
            setTimeout(() => {
                location.reload()
            }, 400);
        });
    });
</script>