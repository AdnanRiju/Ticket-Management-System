@model CompanyManagement.Models.Ticket
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Create Ticket";
}
<partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<div class="content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-9">
                <div class="card card-info">
                    <div class="card-header">
                        Create a new ticket
                    </div>
                    <div class="card-body">
                        <form asp-action="CreateTicket" asp-controller="Ticket"
                              data-ajax-begin="onBegin" data-ajax-complete="onComplete"
                              data-ajax-failure="onFailed" data-ajax-success="onSuccess"
                              data-ajax="true" data-ajax-method="POST" autocomplete="off">
                            <input type="hidden" asp-for="IssuedBy" />
                            <input type="hidden" asp-for="ActiveStatus" />
                            <input type="hidden" asp-for="CustomerStatus" />
                            <input type="hidden" asp-for="IssuedDate" />
                            <input type="hidden" asp-for="ManagementTicketStatus" />
                            <input type="hidden" asp-for="TicketNo" />
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="row mt-1">
                                <div class="col-md-4">
                                    <label class="control-label">Ticket Subject</label>
                                </div>
                                <div class="col-md-8">
                                    <input asp-for="TicketSubject" class="form-control" required />
                                    <span asp-validation-for="TicketSubject" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mt-1">
                                <div class="col-md-4">
                                    <label class="control-label">Ticket Details</label>
                                </div>
                                <div class="col-md-8">
                                    <input asp-for="TicketDetails" class="form-control" required />
                                    <span asp-validation-for="TicketDetails" class="text-danger"></span>
                                </div>
                            </div>
                            
                            
                            <div class="form-group row mt-1">
                                <div class="col-md-4">
                                    <label class="control-label">Product</label>
                                </div>
                                <div class="col-md-8">

                                    <select asp-for="ProductId" asp-items="(SelectList)ViewBag.UserProduct" class="form-control" required>
                                        <option value="0">Select Product</option>
                                    </select>

                                </div>
                            </div>
                            <div class="form-group row mt-1">
                                <div class="col-md-4">
                                    <label class="control-label">ServiceType</label>
                                </div>
                                <div class="col-md-8">

                                    <select asp-for="ServiceTypeId" asp-items="(SelectList)ViewBag.serviceType" class="form-control" required>
                                        <option value="0">Select service</option>
                                    </select>

                                </div>
                            </div>

                            <div class="row mt-2">
                                <div class="col-md-8 offset-md-4">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            // Show success alert if TempData contains a success message
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                    alert('@TempData["SuccessMessage"]');
            </text>
        }
                });
    </script>
}
