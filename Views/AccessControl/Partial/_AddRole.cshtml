@model CompanyManagement.Models.UserRole
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<div class="modal-dialog " role="document">
    <div class="modal-content">
        <div class="modal-header">
            <span><b>@ViewBag.TitleName</b></span>
            <button type="button" class="close trigger-reload" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div>
        <div class="modal-body">
            @*asp-controller="AccessControl" asp-action="@action" asp-area="Admin"*@
            <form data-ajax-url="@ViewBag.Action"
                  data-ajax-begin="onBegin" data-ajax-complete="onComplete"
                  data-ajax-failure="onFailed" data-ajax-success="onSuccess"
                  data-ajax="true" data-ajax-method="POST" autocomplete="off">
                @Html.AntiForgeryToken()
                <div class="row pb-3">
                    <div class="col-md-4">
                        <label class="control-label">Role Name</label>
                    </div>
                    <div class="col-md-8">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="RoleType" />
                        <input class="form-control" data-val-required="Please enter the role name" id="RoleName" asp-for="RoleName" required="required" type="text" placeholder="Role Name">
                        <span class="text-danger field-validation-valid" asp-validation-for="RoleName" data-valmsg-replace="true"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" class="btn btn-success" value="Save" />
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('.trigger-reload').on('click', () => {
            setTimeout(() => {
                location.reload()
            }, 300);
        });
    });
</script>
