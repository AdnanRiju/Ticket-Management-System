@model CompanyManagement.Models.ServiceType
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<div class="modal-dialog " role="document">
    <div class="modal-content">
        <div class="modal-header bg-info text-white">
            <span><b>@ViewBag.TitleName</b></span>
            <button type="button" class="close trigger-reload" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div>
        <div class="modal-body">
            <form asp-controller="Service" asp-action="EditService"
                  data-ajax-begin="onBegin" data-ajax-complete="onComplete"
                  data-ajax-failure="onFailed" data-ajax-success="onSuccessForTicket"
                  data-ajax="true" data-ajax-method="POST" autocomplete="off">
                @Html.AntiForgeryToken()
                <div class="row pb-3">
                    <div class="col-md-4">
                        <label class="control-label">Service Name</label>
                    </div>
                    <div class="col-md-8">
                        <input type="hidden" asp-for="Id" />
                        <input class="form-control" asp-for="ServiceTypeName" required="required" type="text" placeholder="Service Name">
                        <span class="text-danger field-validation-valid" asp-validation-for="ServiceTypeName" data-valmsg-replace="true"></span>
                    </div>
                </div>

                <div class="modal-footer">
                    <input type="submit" class="btn btn-sm btn-success" value="Save" />
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('.trigger-reload').on('click', () => {
            setTimeout(() => {
                location.reload()
            }, 300);
        });
    });
</script>